<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_gravity="center_horizontal"
              android:layout_marginBottom="16dp"
              android:layout_width="@dimen/weapon_width"
              android:layout_height="wrap_content">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/medal_tile_width"
            android:id="@+id/weaponImage" android:scaleType="centerInside"
            android:background="@drawable/medal_tile_bg"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/weaponName" android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
            android:background="@drawable/medal_tile_title_bg" android:padding="4dp"
            android:textColor="@android:color/white" android:singleLine="true" android:ellipsize="end"/>
</LinearLayout>